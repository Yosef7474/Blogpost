<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto+Slab:wght@300;400&display=swap" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            color: #333;
            line-height: 1.6;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Roboto Slab', serif;
            font-weight: 700;
            color: #2c3e50;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        header {
            text-align: center;
            padding: 60px 20px;
            background: linear-gradient(135deg, #4c669f, #2a3e66);
            color: white;
            margin-bottom: 40px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        header h1 {
            font-size: 3rem;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        header p {
            font-size: 1.2rem;
            margin-top: 10px;
            opacity: 0.9;
        }

        /* Button */
        .btn {
            display: inline-block;
            padding: 12px 24px;
            font-size: 1rem;
            font-weight: 700;
            border-radius: 25px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-primary {
            background: #2575fc;
            color: white;
            border: 2px solid #2575fc;
        }

        .btn-primary:hover {
            background: transparent;
            color: #2575fc;
        }

        /* Blog Grid */
        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            padding: 20px;
        }

        /* Article Card */
        .article-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .article-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .article-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .article-card-content {
            padding: 20px;
        }

        .article-card h4 {
            font-size: 1.5rem;
            margin: 0 0 10px;
        }

        .article-card p {
            font-size: 1rem;
            color: #666;
            margin: 0 0 15px;
        }

        .article-card .meta {
            font-size: 0.9rem;
            color: #888;
            margin-bottom: 15px;
        }

        .article-card .actions {
            display: flex;
            gap: 10px;
        }

        .article-card .btn {
            padding: 8px 16px;
            font-size: 0.9rem;
            border-radius: 20px;
        }

        .btn-edit {
            background: #ffc107;
            color: #333;
            border: 2px solid #ffc107;
        }

        .btn-edit:hover {
            background: transparent;
            color: #ffc107;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
            border: 2px solid #dc3545;
        }

        .btn-delete:hover {
            background: transparent;
            color: #dc3545;
        }

        .btn-read {
            background: #28a745;
            color: white;
            border: 2px solid #28a745;
        }

        .btn-read:hover {
            background: transparent;
            color: #28a745;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            margin-top: 40px;
            background: #2c3e50;
            color: white;
        }

        footer p {
            margin: 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header>
        <h1>Articles</h1>
        
        <a href="/articles/new" class="btn btn-primary">New Article</a>
    </header>

    <!-- Blog Grid -->
    <div class="container">
        <div class="blog-grid">
            <% articles.forEach(article => { %>
                <div class="article-card">
                    <div class="article-card-content">
                        <h4><%= article.title %></h4>
                        <p><%= article.markdown %></p>
                        <div class="meta">Posted on <%= article.createdAt.toLocaleDateString() %></div>
                        <div class="actions">
                            <a href="articles/<%= article.slug %>" class="btn btn-read">Read More</a>
                            <a href="/articles/edit/<%= article.id %>" class="btn btn-edit">Edit</a>
                            <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
                                <button type="submit" class="btn btn-delete">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2023 My Creative Blog. All rights reserved.</p>
    </footer>

</body>
</html>